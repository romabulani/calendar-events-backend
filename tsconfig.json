{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "controllers/*": ["controllers/*"],
        "middlewares/*": ["middlewares/*"],
        "models/*": ["models/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "files":["src/types.d.ts"]
  }
  